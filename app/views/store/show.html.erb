  <td><%= number_to_currency(@product.itv) %></td>
  <td><%= number_to_currency(@product.itp) %></td>
  <td><%= number_to_currency(@product.ithp) %></td>
  <td><%= number_to_currency(@product.fl) %></td>
  <td><%= number_to_currency(@product.fv) %></td>
