<div id="sub-navigation" class="span-24 last append-bottom">
    <%= link_to "Mobile", :controller => 'mobile' %>
    <%= link_to "mio Plan", :controller => 'mioplan' %>
    <%= link_to "mio Home", :controller => 'miohome' %>
</div>

<hr />

<div class="span-23 last specific-box box">
<a href="#" onclick="Effect.toggle('miohomepriceplan', 'slide'); return false;"><em>></em> mio Home Price Plan</a>
<div id="miohomepriceplan" style="display:none">
  <div>
    <%= image_tag("miohomepriceplan.jpg") %>
  </div>
</div>
