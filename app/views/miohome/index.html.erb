<div class="span-20 last">
  <table summary="mio Plan Multi line discount"  border="0" cellspacing="0" cellpadding="0">
   <caption><em>Calculate your mio Home multi line discount </em><br/>
     <div id="alignleft">
<%= form_tag ({:action => :mld, :remote => true })%>
       <strong>Select the Number of Mobile Lines:</strong>
  <%= select_tag "lines", options_for_select(1..5, params[:lines])%><br/>
  <%= "Savings on Each Subscription: #{@linedis}%"%></div>
   </caption>
    <thead>
  <tr>
    <th>Mobile Lines</th>
    <th>1</th>
    <th>2</th>
    <th>3</th>
    <th>4</th>
    <th>5</th>
    <th>Total Subscription</th>
  </tr>
  </thead>
  <tr>
    <td>Price Plan</td>
    <td><%= select_tag "pp1", options_for_select(["", 'iOne Plus', 'iTwo Value', 'iTwo Plus', 'iThree Plus', 'Flexi Lite', 'Flexi', 'Flexi Plus'], params[:pp1])%></td>
    <td><%= select_tag "pp2", options_for_select(["", 'iOne Plus', 'iTwo Value', 'iTwo Plus', 'iThree Plus', 'Flexi Lite', 'Flexi', 'Flexi Plus'], params[:pp2])%></td>
    <td><%= select_tag "pp3", options_for_select(["", 'iOne Plus', 'iTwo Value', 'iTwo Plus', 'iThree Plus', 'Flexi Lite', 'Flexi', 'Flexi Plus'], params[:pp3])%></td>
    <td><%= select_tag "pp4", options_for_select(["", 'iOne Plus', 'iTwo Value', 'iTwo Plus', 'iThree Plus', 'Flexi Lite', 'Flexi', 'Flexi Plus'], params[:pp4])%></td>
    <td><%= select_tag "pp5", options_for_select(["", 'iOne Plus', 'iTwo Value', 'iTwo Plus', 'iThree Plus', 'Flexi Lite', 'Flexi', 'Flexi Plus'], params[:pp5])%></td
    
  </tr>
  <tr>
    <td>Subscription Fee</td>
    <td><%= number_to_currency(@ppsf1) %></td>
    <td><%= number_to_currency(@ppsf2) %></td>
    <td><%= number_to_currency(@ppsf3) %></td>
    <td><%= number_to_currency(@ppsf4) %></td>
    <td><%= number_to_currency(@ppsf5) %></td>
    <td><%= number_to_currency(@ttsf) %></td>
  </tr>
  <tr>
    <td>After Discount</td>
    <td><%= number_to_currency(@ppad1) %></td>
    <td><%= number_to_currency(@ppad2) %></td>
    <td><%= number_to_currency(@ppad3) %></td>
    <td><%= number_to_currency(@ppad4) %></td>
    <td><%= number_to_currency(@ppad5) %></td>
    <td><%= number_to_currency(@ttad) %></td>
  </tr>
  <tr>
    <td>Savings</td>
    <td><%= number_to_currency(@pps1)  %></td>
    <td><%= number_to_currency(@pps2)  %></td>
    <td><%= number_to_currency(@pps3)  %></td>
    <td><%= number_to_currency(@pps4)  %></td>
    <td><%= number_to_currency(@pps5)  %></td>
    <td> <%= number_to_currency(@tts) %></td>
  </tr>
</table>
  <div class="prepend-1 append-bottom"><%= submit_tag("Calculate") %>
</div>
</div>